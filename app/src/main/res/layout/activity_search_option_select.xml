<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jw.nistgammadata.SearchOptionSelect">

    <Button
        android:id="@+id/buttonIDSearchSymbol"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="searchByElemName"
        android:text="@string/button_search_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonIDSearchNumber"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="searchByAtomNum"
        android:text="@string/button_search_ANumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIDSearchSymbol" />

    <EditText
        android:id="@+id/editTextIDSearchSymbol"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="@string/edit_elem_symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/editTextIDSearchNumber"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="@string/edit_elem_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIDSearchSymbol"></EditText>

    <EditText
        android:id="@+id/editTextIDSearchMaterial"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="@string/edit_material"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIDSearchNumber"></EditText>

    <TextView
        android:id="@+id/textViewWarningMessage"
        android:layout_width="313dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/warning_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIDSearchMaterial" />

    <Button
        android:id="@+id/buttonIDSearchMaterial"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="searchByMaterialName"
        android:text="@string/button_search_Material"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIDSearchNumber" />

</android.support.constraint.ConstraintLayout>
